#!/bin/sh

# We must pin these or else linting does not work in Webstorm 2019
ignorelist="eslint eslint-* @typescript-eslint/* babel-eslint @babel/core @babel/plugin-syntax-* @babel/plugin-transform-*"

if [ "$1" = "latest" ]; then
  ncu -t latest -u -x "${ignorelist}" || exit 1
else
  ncu -t patch -u -x "${ignorelist}" || exit 1
fi
exit 0
